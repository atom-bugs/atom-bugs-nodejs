{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "dist",
    "rootDir": "lib",
    "declaration": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "inlineSources": true
  },
  "compileOnSave": false,
  "include": [
    "node_modules/@types",
    "lib/**/*.ts"
  ]
}
